<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle__compra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.psycho.controlventas.Main.Detalle_Compra"
    tools:showIn="@layout/activity_detalle__compra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_compras_lblcliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cliente"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_compras_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cliente"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_compras_lblcatalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Catalogo"
            android:textSize="18sp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/lbl_compras_catalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Catalogo"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_compras_lblpagina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Página: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lbl_compras_pagina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pagina"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_compras_lblnumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número: "
                    android:textSize="18sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/lbl_compras_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_compras_lblmarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Marca: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lbl_compras_marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Marca: "
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/lbl_compras_lblid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ID"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lbl_compras_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ID"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/lbl_compras_lblcosto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costo: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lbl_compras_costo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Costo"
                    android:textSize="18sp"
                    android:layout_gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/lbl_compras_lblprecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lbl_compras_precio"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/txt_compras_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Notas (Ubicación)"
                android:inputType="textCapWords"
                android:lines="1"
                android:textSize="18sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_compras_comprado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:text="Comprado"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>
