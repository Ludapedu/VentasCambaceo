<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle__compra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.psycho.controlventas.Main.Detalle_Compra"
    tools:showIn="@layout/activity_detalle__compra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_compras_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cliente"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/lbl_compras_catalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Catalogo"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_compras_pagina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Página"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_compras_numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número"
                        android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_compras_marca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/lbl_compras_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="15sp">

                    </TextView>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/lbl_compras_costo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Costo"
                        android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/lbl_compras_precio"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/txt_compras_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ubicación"
                android:textSize="15sp"
                android:inputType="textMultiLine|textCapWords"
                android:lines="4"
                android:gravity="top"
                />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_compras_comprado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprado"
            android:paddingTop="10dp"
            android:layout_gravity="right"
            android:textSize="15sp"/>

    </LinearLayout>

</RelativeLayout>
