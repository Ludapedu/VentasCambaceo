<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detalles_venta"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="?attr/actionBarSize">

            <TextView
                android:id="@+id/lbl_Dialogo_Ventas_Cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Cliente" />

            <Spinner
                android:id="@+id/spinner_Dialogo_Ventas_Clientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false" />

            <TextView
                android:id="@+id/lbl_Dialogo_Ventas_Catalogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Catalogo" />

            <Spinner
                android:id="@+id/spinner_Dialogo_Ventas_Catalogos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lbl_Dialogo_Ventas_Estatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Estatus" />

            <Spinner
                android:id="@+id/spinner_Dialogo_Ventas_Estatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_Dialogo_Ventas_Pagina"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Página"
                            android:inputType="number"
                            android:nextFocusLeft="@id/txt_Dialogo_Ventas_Pagina"
                            android:nextFocusUp="@id/txt_Dialogo_Ventas_Pagina"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_Dialogo_Ventas_Numero"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Número"
                            android:inputType="numberDecimal"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/txt_Dialogo_Ventas_Marca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Marca"
                            android:inputType="textAutoComplete"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp"
                            android:enabled="false"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_Dialogo_Ventas_ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ID"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:enabled="false">

                        </EditText>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent" >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_Dialogo_Ventas_Costo"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Costo"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp"
                            android:enabled="false"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_Dialogo_Ventas_Precio"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:hint="Precio"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:enabled="false"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_Dialogo_Ventas_Editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_anchorGravity="left"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_Dialogo_Ventas_Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_anchorGravity="right"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_Dialogo_Ventas_Aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:visibility="invisible"
                    app:layout_anchorGravity="left"
                    app:srcCompat="@drawable/ic_done_white_24dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
