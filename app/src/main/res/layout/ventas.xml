<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_Ventas_Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Cliente"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinner_Ventas_Clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lbl_Ventas_Catalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Catalogo"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinner_Ventas_Catalogos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_Ventas_Pagina"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Página"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_Ventas_Numero"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:hint="Número"
                android:textSize="18sp"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/txt_Ventas_Marca"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Marca"
                android:inputType="textAutoComplete|textCapWords"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_Ventas_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="6" >

                <requestFocus />
            </EditText>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_Ventas_Costo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:hint="Costo"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_Ventas_Precio"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:hint="Precio"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp"
                android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_Ventas_Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchorGravity="left"
            app:srcCompat="@drawable/ic_done_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_Ventas_Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchorGravity="right"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

</LinearLayout>
